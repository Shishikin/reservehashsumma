<mah:MetroWindow x:Class="Hashsumma3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hashsumma3"
        mc:Ignorable="d"
         xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"    
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Button Content="Button" HorizontalAlignment="Center" VerticalAlignment="Top" Height="75" Width="120" Margin="0,98,0,0" Click="Button_Click"/>
        <mah:NumericUpDown Minimum="1" x:Name="numberfile"
                   Maximum="100"
                   Interval="1"
                    HorizontalAlignment="Center" Height="55" Margin="0,263,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</mah:MetroWindow>
